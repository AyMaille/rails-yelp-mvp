<p><%= @restaurant.name %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>
<p><% @restaurant.reviews.each do |review|%></p>
  <%= review.content %>
  <%= review.rating %>

<% end %>




<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %><br />
    <%= f.input :content %><br />
    <%= f.submit %>
  <% end %>
</div>
